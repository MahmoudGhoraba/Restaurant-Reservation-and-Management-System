      "item": [
        {
          "name": "Create Order - Takeaway (Simplest)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Order created successfully', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('success');",
                  "    pm.expect(jsonData.data).to.have.property('_id');",
                  "    pm.collectionVariables.set('orderId', jsonData.data._id);",
                  "});",
                  "",
                  "pm.test('Order type is Takeaway', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.orderType).to.eql('Takeaway');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{customerId}}\",\n  \"items\": [\n    {\n      \"menuItem\": \"{{menuItemId1}}\",\n      \"name\": \"Pizza\",\n      \"quantity\": 2,\n      \"price\": 12.99\n    }\n  ],\n  \"orderType\": \"Takeaway\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Get All Orders",
