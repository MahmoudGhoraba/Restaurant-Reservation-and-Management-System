      "name": "1. User Registration - Simple Cases",
      "item": [
        {
          "name": "Register Customer - Valid (Simplest)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('User registered successfully', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success || jsonData.status).to.exist;",
                  "    pm.expect(jsonData.data || jsonData.user).to.have.property('_id');",
                  "});",
                  "",
                  "pm.test('User role is Customer', function () {",
                  "    var jsonData = pm.response.json();",
                  "    var user = jsonData.data || jsonData.user;",
                  "    pm.expect(user.role).to.eql('Customer');",
                  "});",
                  "",
                  "// Save customer ID",
                  "var jsonData = pm.response.json();",
                  "var user = jsonData.data || jsonData.user;",
                  "if (user && user._id) {",
                  "    pm.collectionVariables.set('customerId', user._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"{{customerEmail}}\",\n  \"password\": \"Customer123!\",\n  \"phone\": 1234567890,\n  \"role\": \"Customer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
