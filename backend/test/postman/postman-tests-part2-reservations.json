                  "});",
                  "",
                  "pm.test('Returns only customer reservations', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reservations/my-reservations",
              "host": ["{{baseUrl}}"],
              "path": ["reservations", "my-reservations"]
            }
          }
        },
        {
          "name": "Get Reservation By ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Correct reservation returned', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data._id).to.eql(pm.collectionVariables.get('reservationId'));",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reservations/{{reservationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["reservations", "{{reservationId}}"]
            }
          }
        }
