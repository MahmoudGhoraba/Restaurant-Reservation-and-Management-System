      "name": "1. Feedback - Simple Cases",
      "item": [
        {
          "name": "Give Feedback - Rating 5 (Best)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Feedback submitted successfully', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('success');",
                  "    pm.expect(jsonData.data).to.have.property('_id');",
                  "    pm.collectionVariables.set('feedbackId', jsonData.data._id);",
                  "});",
                  "",
                  "pm.test('Rating is 5', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.rating).to.eql(5);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{customerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"referenceId\": \"{{orderId}}\",\n  \"rating\": 5,\n  \"comment\": \"Excellent food and service! Highly recommend.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/customers/feedback",
              "host": ["{{baseUrl}}"],
              "path": ["customers", "feedback"]
            }
          }
